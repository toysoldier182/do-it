<div class="container">
  <div class="row mt-4">
    <div class="col-6">
      <h2>Add new todo:</h2>
      <%= render 'new' %>
    </div>
    <div class="col-6">
      <h1>My todos</h1>
      <p>These are all my todos: </p>

      <ul class="list-group">
        <% @todos.each do |todo| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= todo.name %>
            <span class="badge badge-primary badge-pill"><%= todo.due_date %></span>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>
