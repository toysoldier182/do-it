<div class="container">
  <div class="row mt-4">
    <div class="col-6">
      <h2>Add new todo:</h2>
      <%= render 'new' %>
    </div>
    <div class="col-6">
      <h1>My todos</h1>

      <ul class="list-group">
        <% @todos.each do |todo| %>
          <li class="list-group-item justify-content-between d-flex align-items-center">
            <span>
              <%= link_to  todo_path(todo), method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="far fa-trash-alt"></i>
              <% end %>
              <%= todo.name %>
            </span>
            <% if todo.due_date.present? %>
              <span class="badge badge-primary badge-pill">
                <%= todo.due_date %>
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
