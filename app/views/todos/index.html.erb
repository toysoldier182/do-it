<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for @todo do |f| %>
       <%= f.input :name %>
       <%= f.date_field :due_date %>
       <%= f.submit %>
      <% end %>
    </div>
    <div class="col-6">
      <h1>My todos</h1>
      <p>These are all my todos: </p>

      <ul>
        <% @todos.each do |todo| %>
          <p><%= todo.name %></p>
        <% end %>
      </ul>
    </div>
  </div>
</div>
