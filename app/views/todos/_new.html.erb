 <%= simple_form_for @todo, id: "new-todo-form", remote: true do |f| %>
  <%= f.input :name, id: "todo-name" %>
  <%= f.date_field :due_date, id:"todo-date" %>
  <%= f.button :submit,  id: "new-todo", class: "btn btn-primary" %>
 <% end %>


